<script type="text/javascript">
$(function() {
  // toggle option panel
  $('#showHideFilterPanelButton').click(function() {
    $('#filterPanel').toggle(100);
    $('#bodyTop').toggleClass('bodyTop');
    if (!$('#bodyTop').hasClass('bodyTop')) {
      $.cookie('optPl', '1', { expires: 365, path: '/' });
    } else {
      $.removeCookie('optPl');
    }
  });
  if ($.cookie('optPl') != '1') {
    $('#filterPanel').toggle();
    $('#bodyTop').toggleClass("bodyTop");
  }

  // $(':checkbox').checkboxpicker(); // bootstrap-checkbox.js

  // check all file types
  $('#fileTypeHeader').change(function() {
    $('#fileTypePanel :checkbox').prop('checked', $(this).prop('checked'));
  });
  $('#fileTypePanel :checkbox').change(function() {
    $('#fileTypeHeader').prop('checked', ($('#fileTypePanel :checkbox:not(:checked)').length < 1))
  });
})
</script>

